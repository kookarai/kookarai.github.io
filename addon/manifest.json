{
  "manifest_version": 3,
  "name": "Record and Send Audio",
  "version": "1.0",
  "description": "Record audio, process it, and schedule events directly from your browser.",
  "permissions": [
    "storage",
    "alarms",
    "activeTab",
    "scripting",
    "webRequest",
    "webRequestBlocking",
    "microphone"
  ],
  "host_permissions": [
    "https://api.elevenlabs.io/*",
    "https://intent-kit-16.hasura.app/*",
    "https://oqhygqxpxpdjtvaahwxk.supabase.co/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/ic_launcher.png",
    "48": "icons/ic_launcher2.png",
    "128": "icons/ic_launcher3.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
